<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/activity_title"
        layout="@layout/base_activity_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_below="@id/activity_title"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/duang"
            android:scaleType="fitXY" />


        <EditText
            android:id="@+id/edit_user_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_avatar"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/edit_user_name"
            android:layout_alignBaseline="@id/edit_user_name"
            android:text="用户名"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/edit_password"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_user_name"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/edit_password"
            android:layout_alignBaseline="@id/edit_password"
            android:text="密码"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_nick_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_password"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/edit_nick_name"
            android:layout_alignBaseline="@id/edit_nick_name"
            android:text="姓名"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_nick_name"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/edit_phone"
            android:layout_alignBaseline="@id/edit_phone"
            android:text="手机"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/edit_phone"
            android:layout_centerHorizontal="true">

            <RadioButton
                android:id="@+id/radio_visitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="我是游客" />

            <RadioButton
                android:id="@+id/radio_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是导游" />
        </RadioGroup>


        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_centerHorizontal="true"
            android:text="确定"
            android:textSize="24dp" />

    </RelativeLayout>
</RelativeLayout>
